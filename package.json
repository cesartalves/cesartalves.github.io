{
  "dependencies": {
    "node-sass": "^7.0.1"
  },
  "scripts": {
    "sass": "node-sass --watch -o dist src/assets",
    "blog": "bundle exec --gemfile=src/blog/Gemfile jekyll build -s ./src/blog -d ./blog",
    "serve": "bundle exec --gemfile=src/blog/Gemfile jekyll serve -s ./src/blog --livereload"
  }
}
